<script>$( document ).ready(function() {
    
$("#closeBut").hide();
$(".block").addClass("notActive");
$(".fullDesc").hide();
/*$(".block.mid.notActive").hover(function(){$(this).find(".slide").css("transform","translateY(30px)");},function(){$(this).find(".slide").css("transform","translateY(150px)");});
$(".block.big.notActive").hover(function(){$(this).find(".slide").css("transform","translateY(100px)");},function(){$(this).find(".slide").css("transform","translateY(304px)");});*/
$(".block").click(function(){$(this).removeClass("notActive").addClass("active");$(".block").hide();$(this).fadeIn().css({"position":"absolute","width":"1012px","top":"0px","left":"0px","height":"569px"}).find("h1").css("font-size","40pt");$(this).find(".shortDesc").hide();$(this).find(".fullDesc").show();$("#closeBut").fadeIn();$(this).find(".slide").css("transform","translateY(500px)").delay(500).css({"width":"1012px","transform":"translateY(0px)"});});
$("#closeBut").click(function(){makeStart();});
function makeStart() {
  $(".fullDesc").hide();
 $(".active").addClass("notActive").find(".slide").removeAttr('style').find("h1").removeAttr('style');$(".active").removeClass("active").find("h2.shortDesc").removeAttr('style');
  //$(".block").css("transition","all 0s ease 0s");
 $(".block.mid").css({"position":"static","width":"250px","height":"150px","display":"inline-block"});
 $(".block.big").css({"position":"static","width":"504px","height":"304px","display":"inline-block"});
  $("#closeBut").css("display","none");
  $(".block").show();
};

    
});</script>
